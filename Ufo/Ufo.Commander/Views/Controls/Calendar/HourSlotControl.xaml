<UserControl x:Class="Ufo.Commander.Views.Controls.Calendar.HourSlotControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Ufo.Commander.Views.Controls.Calendar"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="200">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="5*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Column="0" 
                   Text="{Binding Hour}" 
                   Foreground="#9493CF" FontSize="16" 
                   Margin="0, 3, 0, 0" />

        <TextBlock Grid.Column="1"
                   Text="{Binding Artist}"
                   Margin="2"
                   PreviewMouseUp="TextBlock_PreviewMouseUp">
        </TextBlock>
    </Grid>
</UserControl>
